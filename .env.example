# Environment Configuration
NODE_ENV=development
PORT=3000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# TELEGRAM_WEBHOOK_URL=https://your-domain.com  # Optional: Leave empty for polling mode, set for webhook mode

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tele_journal

# AI Provider Configuration
AI_PROVIDER=mistral  # 'openai' or 'mistral'

# Mistral Configuration (Recommended - Free tier available)
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_CHAT_MODEL=mistral-small-latest
MISTRAL_EMBEDDING_MODEL=mistral-embed

# OpenAI Configuration (Optional - Requires paid plan)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# OPENAI_CHAT_MODEL=gpt-4o-mini
